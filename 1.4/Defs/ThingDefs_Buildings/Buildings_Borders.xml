<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
    <!-- Borders Base -->
    <ThingDef ParentName="BuildingBase" Abstract="True" Name="VFE_BorderBase">
        <altitudeLayer>FloorEmplacement</altitudeLayer>
        <passability>Standable</passability>
        <size>(1,1)</size>
		
        <statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToBuild>5</WorkToBuild>
			<Mass>0.1</Mass>
			<Flammability>0</Flammability>
			<Beauty>1</Beauty>
        </statBases>
		
        <canOverlapZones>true</canOverlapZones>
        <defaultPlacingRot>South</defaultPlacingRot>
		<rotatable>true</rotatable>
		
		<pathCost>0</pathCost>
		
        <tradeability>None</tradeability>
        <selectable>true</selectable>

        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.05,1.05)</drawSize>
        </graphicData>
		<castEdgeShadows>false</castEdgeShadows>
		
        <clearBuildingArea>false</clearBuildingArea>
		
		<researchPrerequisites><li>BorderProps</li></researchPrerequisites>
		<designationCategory>PropsandDecor</designationCategory>
		
        <building>
			<isEdifice>false</isEdifice>
			<isInert>true</isInert>
            <ai_neverTrashThis>true</ai_neverTrashThis>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
			<paintable>true</paintable>
        </building>
        <fillPercent>0</fillPercent>
    </ThingDef>
	
    <!-- Carpet Border -->

    <ThingDef ParentName="VFE_BorderBase">
        <defName>VFE_CarpetBorder_Straight</defName>
        <label>carpet border</label>
        <description>A simple, paintable cloth carpet border.</description>
		<costList>
			<Cloth>1</Cloth>
		</costList>
        <graphicData>
            <texPath>Things/Building/BorderProps/BorderCarpet_Straight</texPath>
        </graphicData>
    </ThingDef>
	

    <ThingDef ParentName="VFE_BorderBase">
        <defName>VFE_CarpetBorder_Corner</defName>
        <label>carpet border corner</label>
        <description>A simple, paintable cloth carpet border. To be placed in the corner.</description>
		<costList>
			<Cloth>1</Cloth>
		</costList>
        <graphicData>
            <texPath>Things/Building/BorderProps/BorderCarpet_Corner</texPath>
